<p style="color: green"><%= notice %></p>

<h1><%= t('thead.mining_types') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th><%= t('thead.actions') %></th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('links.new_mining_type'), new_mining_type_path, class: 'btn btn-outline-primary' %>
